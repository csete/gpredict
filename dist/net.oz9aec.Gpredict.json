{
  "app-id": "net.oz9aec.Gpredict",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "gpredict",
  "finish-args": [
    "--share=ipc", "--socket=x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "build-options" : {
	  "cflags": "-O2 -g",
	  "cxxflags": "-O2 -g"
  },
  "cleanup": ["/include" ],
  "modules": [
    {
      "name": "libgoocanvas",
      "sources": [
	{
	  "type": "archive",
	  "url": "http://ftp.gnome.org/pub/GNOME/sources/goocanvas/2.0/goocanvas-2.0.4.tar.xz",
	  "sha256": "c728e2b7d4425ae81b54e1e07a3d3c8a4bd6377a63cffa43006045bceaa92e90"
	}
      ]
    },
    {
      "name": "hamlib",
      "sources": [
	{
	  "type": "archive",
	  "url": "https://sourceforge.net/projects/hamlib/files/hamlib/3.1/hamlib-3.1.tar.gz",
	  "sha256": "682304c3e88ff6ccfd6a5fc28b33bcc95d2d0a54321973fef015ff62570c994e"
	}
      ]
    },
    {
      "name": "gpredict",
      "sources": [
	{
	  "type": "git",
	  "url": "https://github.com/csete/gpredict.git",
	  "tag": "v2.2"
	}
      ]
    }
  ]
}
